{
    "appId": "com.xlxz.xx-mod-manager",
    "productName": "XX Mod Manager",
    "icon": "./src/assets/icon.ico",
    // "compression": "maximum",
    "directories": {
        "output": "build"
    },
    "extraResources": [
        {
            "from": "./plugins",
            "to": "../plugins"
        },
        {
            "from": "./src/assets/default.png",
            "to": "../src/assets/default.png"
        }
    ],
    "files": [
        "dist",
        "electron"
    ],
    "publish": [
        {
            "provider": "github",
            "owner": "XiaoLinXiaoZhu",
            "repo": "XX-Mod-Manager",
            "releaseType": "draft"
        }
    ],
    "win": {
        "target": [
            "nsis",
            "zip"
        ],
        "icon": "./src/assets/icon.ico"
    },
    "linux": {
        "target": [
            "tar.xz"
        ],
        "icon": "./src/assets/icon.ico"
    }
}